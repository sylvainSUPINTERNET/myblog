{% extends 'BlogBundle::layout.html.twig' %}

{% block nav %}
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="{{ path('home') }}">Yet Another Blog</a>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Home</a>
                </li>
                {% for rubrique in rubriques %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('category_info', {'name_cat' :  rubrique.name } ) }}">{{ rubrique.name|capitalize }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </nav>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col">
                {% for post in posts %}
                    <ul style="list-style-type: none;">
                        <h3><a href="{{ path('post_info', {'id' : post.id }) }}">{{ post.title }}</a>
                        </h3>
                        <li><code>{{ post.created|date("m/d/Y") }}</code></li>
                        <strong><i>AUTHOR TO DO (relation)</i></strong>
                        {#<li><i><strong>{{ post.description }}</strong></i></li>#}
                        <li><i>{{ post.content| truncate(200, false, ' ...') }}</i></li>
                        <li>
                            <br>
                            <p><strong><i>Th√®mes : </i></strong></p>
                            {% for category in post.categories %}
                                <ul>
                                    <li><a href="{{ path('category_info' , {'name_cat': category.name}) }}">{{ category.name }}</a></li>
                                </ul>
                            {% endfor %}
                        </li>
                        <br>
                    </ul>

                    <hr>
                {% endfor %}

            </div>
        </div>

        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>
{% endblock %}
